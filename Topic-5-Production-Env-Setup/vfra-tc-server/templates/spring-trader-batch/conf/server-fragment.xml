<Server>
    <GlobalNamingResources>
        <add:Resource auth="Container"
                      name="jdbc/batchdbstg"
                      driverClassName="${batch.db.stg.driverClassName}"
                      url="${batch.db.stg.url}"
                      username="${batch.db.stg.username}"
                      password="${batch.db.stg.password}"
		      validationQuery="${batch.db.stg.validationQuery}"
		      validationInterval="30000"
                      initialSize="10"
                      jmxEnabled="true"
                      logAbandoned="true"
                      maxActive="20"
                      maxIdle="10"
                      maxWait="-1"
                      minEvictableIdleTimeMillis="30000"
                      removeAbandoned="true"
                      removeAbandonedTimeout="60"
                      testOnBorrow="true"
                      testOnReturn="false"
                      testWhileIdle="true"
                      timeBetweenEvictionRunsMillis="5000"
                      type="javax.sql.DataSource"/>
        <add:Resource auth="Container"
                      name="jdbc/batchdbrpt"
                      driverClassName="${batch.db.rpt.driverClassName}"
                      url="${batch.db.rpt.url}"
                      username="${batch.db.rpt.username}"
                      password="${batch.db.rpt.password}"
		      validationQuery="${batch.db.rpt.validationQuery}"
		      validationInterval="30000"
                      initialSize="10"
                      jmxEnabled="true"
                      logAbandoned="true"
                      maxActive="20"
                      maxIdle="10"
                      maxWait="-1"
                      minEvictableIdleTimeMillis="30000"
                      removeAbandoned="true"
                      removeAbandonedTimeout="60"
                      testOnBorrow="true"
                      testOnReturn="false"
                      testWhileIdle="true"
                      timeBetweenEvictionRunsMillis="5000"
                      type="javax.sql.DataSource"/>
        <add:Resource auth="Container"
                      name="jdbc/batchdbjob"
                      driverClassName="${batch.db.job.driverClassName}"
                      url="${batch.db.job.url}"
                      username="${batch.db.job.username}"
                      password="${batch.db.job.password}"
		      validationQuery="${batch.db.job.validationQuery}"
		      validationInterval="30000"
                      initialSize="10"
                      jmxEnabled="true"
                      logAbandoned="true"
                      maxActive="20"
                      maxIdle="10"
                      maxWait="-1"
                      minEvictableIdleTimeMillis="30000"
                      removeAbandoned="true"
                      removeAbandonedTimeout="60"
                      testOnBorrow="true"
                      testOnReturn="false"
                      testWhileIdle="true"
                      timeBetweenEvictionRunsMillis="5000"
                      type="javax.sql.DataSource"/>
    </GlobalNamingResources>
</Server>
